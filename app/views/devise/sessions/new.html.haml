.text-center
  %h2= t('devise.authenticable.log_in')
  .row
    .col-md-4.col-md-offset-4
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        .form-group
          .col-md-12
            = f.label t('parameters.callsign')
            = f.text_field :callsign, autofocus: true, class: 'form-control'
        .form-group
          .col-md-12
            = f.label t('parameters.password')
            = f.password_field :password, autocomplete: "off", class: 'form-control'
        - if devise_mapping.rememberable?
          .form-group
            .col-md-12
              .checkbox
                %label
                  = f.check_box :remember_me
                  = t('devise.rememberable.chekbox_label')
          = f.submit t('devise.authenticable.log_in'), class: 'btn btn-default'
      = render "devise/shared/links"
