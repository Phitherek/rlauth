.text-center
  %h2= t('devise.rememberable.change_your_password')
  .row
    .col-md-4.col-md-offset-4
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        .form-group
          .col-md-12
            = f.label :password, t('parameters.new_password')
          %br/
          - if @minimum_password_length
            %em= t('devise.minimum_password_length', length: @minimum_password_length)
          = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'
        .form-group
          .col-md-12
            = f.label :password_confirmation, t('parameters.new_password_confirmation')
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
        = f.submit t('devise.rememberable.change_my_password'), class: 'btn btn-default'
  = render "devise/shared/links"
