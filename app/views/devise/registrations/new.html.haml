.text-center
  %h2= t('devise.registerable.sign_up')
  .row
    .col-md-4.col-md-offset-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
        = devise_error_messages!
        .form-group
          .col-md-12
            = f.label t('parameters.callsign')
            = f.text_field :callsign, autofocus: true, class: 'form-control'
        .form-group
          .col-md-12
            = f.label t('parameters.email')
            = f.email_field :email, class: 'form-control'
        .form-group
          .col-md-12
            = f.label t('parameters.password')
            - if @minimum_password_length
              %em= t('devise.minimum_password_length', length: @minimum_password_length)
          = f.password_field :password, autocomplete: "off", class: 'form-control'
        .form-group
          .col-md-12
            = f.label t('parameters.password_confirmation')
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
        = f.submit t('devise.registerable.sign_up'), class: 'btn btn-default'
  = render "devise/shared/links"
